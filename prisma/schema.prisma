generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// USERS + ROLES

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String    @unique
  emailVerified    DateTime? @default(now())
  password         String?
  image            String?
  twoFactorEnabled Boolean   @default(false)

  roles     UserRole[]
  festivals Festival[] // festivals created by this user
  orisas    Orisa[] // orisas created by this user
  tickets   Ticket[] // tickets created by this user

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Role {
  id    String     @id @default(cuid())
  name  String     @unique @default("USER") // USER, CREATOR, MODERATOR, ADMIN, SUPERADMIN
  users UserRole[]
}

model UserRole {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  role   Role   @relation(fields: [roleId], references: [id])
  roleId String

  @@unique([userId, roleId])
  @@map("user_roles")
}

// ORISA

model Orisa {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  userId    String?
  user      User?      @relation(fields: [userId], references: [id])
  festivals Festival[]
}

model Festival {
  id          Int    @id @default(autoincrement())
  title       String
  description String

  orisaId Int
  orisa   Orisa @relation(fields: [orisaId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Step 2: Event Details
  country   String
  eventType String // "physical" or "virtual"
  location  String? // optional if virtual
  eventLink String? // optional if physical
  timezone  String
  startDate DateTime
  startTime String? // optional, for UI convenience (HH:mm)
  endDate   DateTime
  endTime   String? // optional, for UI convenience (HH:mm)

  // Step 3: Tickets
  ticketType String // "free" | "single" | "group"
  tickets    Ticket[]

  image  String? // could store path or URL
  banner String? // could store path or URL

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// TICKETS

model Ticket {
  id         Int      @id @default(autoincrement())
  festival   Festival @relation(fields: [festivalId], references: [id])
  festivalId Int

  creator   User   @relation(fields: [creatorId], references: [id])
  creatorId String

  name        String
  price       Float
  quantity    Int?
  maxPerGroup Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NEXTAUTH

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
