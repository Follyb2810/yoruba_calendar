generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Orisa {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  festivals Festival[]
}

model Festival {
  id         Int    @id @default(autoincrement())
  title      String
  startMonth Int
  startDay   Int
  endMonth   Int
  endDay     Int
  orisaId    Int
  orisa      Orisa  @relation(fields: [orisaId], references: [id])
}
